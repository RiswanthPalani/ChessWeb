                <div class="colm dark" id="e"><img class="white king" src="/wking.png" alt="white king"/></div>
                <div class="colm light" id="f"><img class="white bishop" src="/wbishop.png" alt="white bishop"/></div>
                <div class="colm dark" id="g"><img class = "white knight" src="/wknight.png" alt="white knight"/></div>
                <div class="colm light" id="h"><img class = "white rook" src="/wrook.png" alt="white rook"/></div>
                

            </div>
           </div>
           <div>
            <button type="button" class="btn btn-primary" class="playbutton">Play</button>
           </div>
        </section>
        <div id="form" style="display:none">
            <form action = "/submit" Method="Post">
             <label for="name1"> Player 1 Name:</label>
             <input type="text" id="name1" name="name1"><br><br>
             <label for="name2"> Player 2 Name</label>
             <input type="text" id="name2" name="name2"><br><br>
             <input type="submit" value="continue">
            </form>
        
        </div>
        <script src="https://ajax.googleapis.com/ajax/libs/jquery/3.7.1/jquery.min.js"></script>  
    <script src="/index.js"></script>
